#include <iostream>

using namespace std;

int main()
{
    int row, k=1;
    cin>>row;
   
   
    for(int i = 0; i < row; i++)
    {
        for(int j=0; j<row+(row-1); j++)
        {
            if(i+j >= row-1 )
            {
            if(((i+j)%2) == 0 && i+j >= 2)
            {
              
                cout<<k;
                k++;
               
            }
            }
      
            
            cout<<"\t";
        }
        cout<<"\n";
    }
}
